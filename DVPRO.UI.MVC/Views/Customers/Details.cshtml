@model DVPRO.DATA.EF.Models.Customer

@{
    ViewData["Title"] = Model.CustomerName + " Details";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary">@ViewData["Title"]</h3>
                </div>

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.CustomerName):</strong>
                        <br />
                        @Html.DisplayFor(model => model.CustomerName)
                    </p>
                </div>

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.ContactName):</strong>
                        <br />
                        @Html.DisplayFor(model => model.ContactName)
                    </p>
                </div>

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.ContactPhone):</strong>
                        <br />
                        @Html.DisplayFor(model => model.ContactPhone)
                    </p>
                </div>

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.ContactEmail):</strong>
                        <br />
                        @Html.DisplayFor(model => model.ContactEmail)
                    </p>
                </div>

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.BillingAddress):</strong>
                        <br />
                        @Html.DisplayFor(model => model.BillingAddress)
                    </p>
                </div>

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.BillingCity):</strong>
                        <br />
                        @Html.DisplayFor(model => model.BillingCity)
                    </p>
                </div>

                @if (Model.BillingState != null)
                {
                    <div class="form-floating mb-3">
                        <p class="mb-0">
                            <strong>@Html.DisplayNameFor(model => model.BillingState):</strong>
                            <br />
                            @Html.DisplayFor(model => model.BillingState)
                        </p>
                    </div>
                }

                @if (Model.BillingPostalCode != null)
                {
                    <div class="form-floating mb-3">
                        <p class="mb-0">
                            <strong>@Html.DisplayNameFor(model => model.BillingPostalCode):</strong>
                            <br />
                            @Html.DisplayFor(model => model.BillingPostalCode)
                        </p>
                    </div>
                }

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.Country):</strong>
                        <br />
                        @Html.DisplayFor(model => model.Country.CountryName)
                    </p>
                </div>

                <div class="text-center">
                    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</div>