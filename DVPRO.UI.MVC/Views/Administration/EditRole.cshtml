@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary"><i class="fa fa-thin fa-atom me-2"></i>Edit Role</h3>
                </div>
                <form method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" disabled class="form-control">
                    <div class="form-group row">
                        <label asp-for="RoleName"class="col-sm-2 col-form-label">Role</label>
                        <div class="col-sm-10">
                            <input asp-for="RoleName" class="form-control">
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row my-3">
                        <div class="col-md-4 offset-md-3"><input type="submit" value="Update" class="btn btn-primary" /></div>
                        <div class="col-md-4"><a asp-action="ListRoles" class="btn btn-secondary">Cancel</a></div>
                    </div>

                    <div class="card bg-secondary text-center">
                        <div class="card-header">
                            <h3 class="text-primary">Users in this role:</h3>
                            <hr />
                        </div>
                        <div class="card-body">
                            @if (Model.Users.Any())
                            {
                                foreach (var user in Model.Users)
                                {
                                    <h5 class="card-title">@user</h5>
                                }
                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or Remove Users from this Role</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>