@model DVPRO.DATA.EF.Models.Order

@{
    ViewData["Title"] = "Order #" + Model.OrderId + " Details";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary">@ViewData["Title"]</h3>
                </div>

                @if (Model.Ponumber != null)
                {
                    <div class="form-floating mb-3">
                        <p class="mb-0">
                            <strong>@Html.DisplayNameFor(model => model.Ponumber):</strong>
                            <br />
                            @Html.DisplayFor(model => model.Ponumber)
                        </p>
                    </div>
                }

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.OrderDate):</strong>
                        <br />
                        @Html.DisplayFor(model => model.OrderDate)
                    </p>
                </div>


                @if (Model.OrderTotal != null)
                {
                    <div class="form-floating mb-3">
                        <p class="mb-0">
                            <strong>@Html.DisplayNameFor(model => model.OrderTotal):</strong>
                            <br />
                            @Html.DisplayFor(model => model.OrderTotal)
                        </p>
                    </div>
                }

                <div class="form-floating mb-3">
                    <p class="mb-0">
                        <strong>@Html.DisplayNameFor(model => model.Vendor):</strong>
                        <br />
                        @Html.DisplayFor(model => model.Vendor.VendorName)
                    </p>
                </div>

               
                <div class="text-center">
                    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</div>
