@model DVPRO.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Edit @Model.ProductName</h3>
                </div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductId" />
                    <div class="form-group mb-2">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input type="text" asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description" class="control-label"></label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="CostPerUnit" class="control-label"></label>
                        <input type="text" asp-for="CostPerUnit" class="form-control" />
                        <span asp-validation-for="CostPerUnit" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="PricePerUnit" class="control-label"></label>
                        <input type="text" asp-for="PricePerUnit" class="form-control" />
                        <span asp-validation-for="PricePerUnit" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="UnitType" class="control-label"></label>
                        <input type="text" asp-for="UnitType" class="form-control" />
                        <span asp-validation-for="UnitType" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="UnitsInStock" class="control-label"></label>
                        <input type="text" asp-for="UnitsInStock" class="form-control" />
                        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="UnitsOnOrder" class="control-label"></label>
                        <input type="text" asp-for="UnitsOnOrder" class="form-control" />
                        <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ProductStatusId" class="control-label"></label>
                        <select asp-for="ProductStatusId" class="form-control" asp-items="ViewBag.ProductStatusId"><option>--Select a Product Status--</option></select>
                        <span asp-validation-for="ProductStatusId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ProductTypeId" class="control-label"></label>
                        <select asp-for="ProductTypeId" class="form-control" asp-items="ViewBag.ProductTypeId"><option>--Select a Product Type--</option></select>
                        <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="VendorId" class="control-label"></label>
                        <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId"><option>--Select a Vendor--</option></select>
                        <span asp-validation-for="VendorId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ProductImage" class="control-label"></label>
                        <input type="text" asp-for="ProductImage" class="form-control" />
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                        <div class="row mt-3">
                            <div class="col-md-4 offset-md-3"><input type="submit" value="Save" class="btn btn-primary" /></div>
                            <div class="col-md-4"><a asp-action="Index" class="btn btn-secondary">Cancel</a></div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
